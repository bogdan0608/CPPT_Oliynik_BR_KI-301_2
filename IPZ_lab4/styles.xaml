<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  Стиль для кнопок  -->
    <Style TargetType="Button">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush EndPoint="1,1" StartPoint="0,0">
                    <GradientStop Color="#3498DB" Offset="0" />
                    <!--  Світло-блакитний на початку  -->
                    <GradientStop Color="#2980B9" Offset="1" />
                    <!--  Темно-блакитний на кінці  -->
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush" Value="#1ABC9C" />
        <!--  Додавання бірюзової обводки  -->
        <Setter Property="Foreground" Value="White" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="5">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  Стиль для рамок  -->
    <Style TargetType="Border">
        <Setter Property="Background" Value="#ECF0F1" />
        <!--  Блідий світло-сірий фон  -->
        <Setter Property="CornerRadius" Value="5" />
        <!--  Закруглені кути  -->
    </Style>

    <!--  Стиль для заголовків/міток  -->
    <Style TargetType="TextBlock" x:Key="LabelStyle">
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="#2C3E50" />
        <!--  Темно-синій для тексту  -->
        <Setter Property="FontSize" Value="14" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <!--  Стиль для відображення значень  -->
    <Style TargetType="TextBlock" x:Key="ValueStyle">
        <Setter Property="Margin" Value="0,0,0,8" />
        <Setter Property="Padding" Value="6" />
        <Setter Property="Background" Value="#E8F6F3" />
        <!--  Світло-бірюзовий для фону  -->
        <Setter Property="Foreground" Value="#16A085" />
        <!--  Бірюзовий для тексту  -->
        <Setter Property="FontSize" Value="13" />
    </Style>

</ResourceDictionary>

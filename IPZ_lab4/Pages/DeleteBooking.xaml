<Window
    Background="#ECECEC"
    Height="450"
    Title="DeleteBooking"
    Width="300"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d"
    x:Class="lab4_19.Pages.DeleteBooking"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:lab4_19.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Window.Resources>
        <ResourceDictionary Source="../styles.xaml" />
    </Window.Resources>
    <Grid>
        <StackPanel Margin="50">
            <TextBlock Text="Кількість балів:" />
            <TextBox Margin="0,0,0,10" Text="{Binding amount, UpdateSourceTrigger=PropertyChanged}" />

            <Button
                Click="DeleteBookingClick"
                Content="Видалити"
                Height="40"
                HorizontalAlignment="Center"
                Width="191" />
        </StackPanel>
    </Grid>
</Window>
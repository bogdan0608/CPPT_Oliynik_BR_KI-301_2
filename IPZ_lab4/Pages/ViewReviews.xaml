<Window
    Background="#ECECEC"
    Height="1000"
    Title="View Reviews"
    Width="850"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d"
    x:Class="lab4_19.Pages.ViewReviews"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:lab4_19.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Window.Resources>
        <ResourceDictionary Source="../styles.xaml" />
    </Window.Resources>

    <Grid>
        <!--  Header Section  -->
        <Border
            CornerRadius="5"
            Margin="10"
            Padding="10">
            <TextBlock
                FontSize="24"
                HorizontalAlignment="Center"
                Text="Customer Reviews" />
        </Border>

        <!--  Reviews and Rating Section  -->
        <Grid Margin="10,60,10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="3*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>

            <!--  Scrollable Reviews Section  -->
            <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Reviews}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border
                                BorderThickness="1"
                                CornerRadius="5"
                                Margin="5"
                                Padding="10">
                                <TextBlock
                                    FontSize="16"
                                    Foreground="#333"
                                    Text="{Binding Text}"
                                    TextWrapping="Wrap" />
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <StackPanel
                Grid.Row="1"
                HorizontalAlignment="Center"
                Margin="10"
                VerticalAlignment="Center">
                <!--  Star Rating Section  -->
                <StackPanel
                    HorizontalAlignment="Center"
                    Margin="0,0,0,10"
                    Orientation="Horizontal">
                    <Button
                        Click="Star_Click"
                        Content="☆"
                        FontSize="36"
                        Name="Star1" />
                    <Button
                        Click="Star_Click"
                        Content="☆"
                        FontSize="36"
                        Name="Star2" />
                    <Button
                        Click="Star_Click"
                        Content="☆"
                        FontSize="36"
                        Name="Star3" />
                    <Button
                        Click="Star_Click"
                        Content="☆"
                        FontSize="36"
                        Name="Star4" />
                    <Button
                        Click="Star_Click"
                        Content="☆"
                        FontSize="36"
                        Name="Star5" />
                </StackPanel>

                <TextBox
                    AcceptsReturn="True"
                    FontSize="16"
                    Height="30"
                    Margin="0,0,10,0"
                    Text="{Binding Names}"
                    TextWrapping="Wrap"
                    Width="400" />
                <StackPanel
                    HorizontalAlignment="Center"
                    Margin="10"
                    Orientation="Horizontal"
                    VerticalAlignment="Center">
                    <TextBox
                        AcceptsReturn="True"
                        FontSize="16"
                        Height="100"
                        Margin="0,0,10,0"
                        Text="{Binding Review.Text}"
                        TextWrapping="Wrap"
                        Width="400" />
                    <Button
                        Click="SendReviewAndRating_Click"
                        Content="Submit Review"
                        FontSize="18"
                        Height="100"
                        HorizontalAlignment="Center"
                        Width="150" />
                </StackPanel>
            </StackPanel>
        </Grid>

        <!--  Exit Button  -->
        <Button
            Click="Close"
            Content="Exit"
            Height="30"
            HorizontalAlignment="Right"
            Margin="10"
            VerticalAlignment="Top"
            Width="80" />
    </Grid>
</Window>

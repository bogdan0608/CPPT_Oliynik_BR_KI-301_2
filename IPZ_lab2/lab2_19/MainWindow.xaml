<Window
    Background="#ECECEC"
    Height="700"
    MinWidth="880"
    Title="MainWindow"
    Width="400"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d"
    x:Class="lab2_19.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:lab2_19"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Window.Resources>
        <ResourceDictionary Source="../styles.xaml" />
    </Window.Resources>

    <Grid Margin="20">
        <!--  Додаємо StackPanel для розміщення елементів в ряд  -->
        <StackPanel
            Margin="0,10,0,0"
            Orientation="Horizontal"
            VerticalAlignment="Top">
            <TextBox x:Name="SearchTextBox" 
                     TextChanged="OnSearchTextChanged"
                     Width="200" 
                     Height="30" 
                     Margin="5"/>

            <Button
                Click="BookingsClick"
                Margin="0,0,20,0"
                Content="Переглянути записи"
                Height="40"
                Width="150" />

            <Button
                Click="BonusClick"
                Margin="0,0,20,0"
                Content="Переглянути кількість балів користувача"
                Height="40"
                Width="300" />
            <Button
                Click="Close"
                Margin="0,0,20,0"
                Content="Вийти"
                Height="40"
                Width="70" />
        </StackPanel>

        <ScrollViewer Margin="0,60,0,0" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Services}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button
                            Background="Gray"
                            Click="SelectService"
                            Content="{Binding Name}"
                            Height="50"
                            HorizontalAlignment="Stretch"
                            Margin="10"
                            Padding="10,5"
                            VerticalAlignment="Stretch"
                            Width="180" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <Button
            Click="ViewingReviewsClick"
            Content="Відгуки"
            Height="50"
            HorizontalAlignment="Center"
            Margin="0,0,0,20"
            VerticalAlignment="Bottom"
            Width="230" />
        <Button
            Click="SignUpFormClick"
            Content="Записатись на послугу"
            Height="50"
            HorizontalAlignment="Left"
            Margin="0,0,0,20"
            VerticalAlignment="Bottom"
            Width="230" />
        <Button
            Click="DetailedInfoClick"
            Content="Редагувати послугу"
            Height="50"
            HorizontalAlignment="Right"
            Margin="0,0,0,20"
            VerticalAlignment="Bottom"
            Width="230" />
    </Grid>
</Window>

<Window
    Background="#ECECEC"
    Height="600"
    Title="Bookings"
    Width="900"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d"
    x:Class="lab2_19.Pages.BookingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Window.Resources>
        <ResourceDictionary Source="../styles.xaml" />
    </Window.Resources>

    <Grid Margin="20">
        <Button
            Click="Close"
            Content="Вийти"
            Height="40"
            HorizontalAlignment="Right"
            Margin="30,10,0,0"
            VerticalAlignment="Top"
            Width="100" />
        <Button
            Click="EditBookingClick"
            Content="Оновити запис"
            Height="40"
            HorizontalAlignment="Center"
            Margin="30,10,0,0"
            VerticalAlignment="Top"
            Width="200" />

        <Button
            Click="DeleteBookingClick"
            Content="Видалити запис"
            Height="40"
            HorizontalAlignment="Left"
            Margin="30,10,0,0"
            VerticalAlignment="Top"
            Width="200" />

        <ScrollViewer Margin="0,100,0,0" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Bookings}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button
                            Background="Gray"
                            Click="SelectBooking"
                            Height="Auto"
                            HorizontalAlignment="Stretch"
                            Margin="10"
                            Padding="10,5"
                            VerticalAlignment="Stretch"
                            Width="180">
                            <StackPanel>
                                <TextBlock FontWeight="Bold" Text="{Binding Name}" />
                                <TextBlock Text="{Binding Phone}" />
                                <TextBlock Text="{Binding Time}" />
                            </StackPanel>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>

<Window
    Background="#ECECEC"
    Height="450"
    Title="Bonuses"
    Width="300"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d"
    x:Class="lab2_19.Pages.Bonuses"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:lab2_19.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Window.Resources>
        <ResourceDictionary Source="../styles.xaml" />
    </Window.Resources>
    <Grid>
        <StackPanel Margin="50">
            <TextBlock Text="Ім'я:" />
            <TextBox Margin="0,0,0,10" Text="{Binding Name}" />

            <Button
                Click="GetBonusesClick"
                Content="Отримати кількість балів"
                Height="40"
                HorizontalAlignment="Center"
                Margin="0,0,00,10"
                Width="191" />
            <Button
                Click="SetZeroBonusesClick"
                Content="Обнулити бали"
                Height="40"
                HorizontalAlignment="Center"
                Width="191" />
        </StackPanel>
    </Grid>
</Window>
